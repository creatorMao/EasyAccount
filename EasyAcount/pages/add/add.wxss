/* pages/add/add.wxss */


/*类型转换开始*/
.type-switch{width: 100px;
             height: 30px;
             border: 1px solid #666666;
             background: #666666;
             box-sizing: border-box;
             margin: 0 auto;
             margin-top: 10px;
             border-radius: 2px;
             }
.type-switch-item{width: 50%;
                  height: 100%;
                  float: left;
                  text-align: center;
                  font-size: 15px;
                  line-height: 30px;
                  color: white
                  }
.type-switch-item-active{background: white;
                         color: black}
/*类型转换结束*/



.detial-container{width: 100%;
                  padding: 15px;
                  box-sizing: border-box}

/*详情item*/
.detial-item{width: 100%;
             height: 60px;
             border-bottom: 1px solid #eeeeee;
             box-sizing: border-box;
             padding: 10px;
             display: flex;
             align-items: center}

.detial-item picker,.detial-item input{margin-left: 15px;
                                       color: #666666}   
.detial-item input{width: 200px;}          

.detial-item-icon{width:32px;
                  height:32px;
                  }
        

/*保存按钮*/
.button-save{width: 96%;
             position: fixed;
             bottom: 2px;
             left: 0;
             height: 50px;
             background: #e8e8e8;
             text-align: center;
             line-height: 50px;
             margin-left: 2%;}
