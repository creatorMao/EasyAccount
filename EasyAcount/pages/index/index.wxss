/* pages/index/index.wxss */

/*头部*/
.header{width: 100%;
        background: #208ee1;
        display: flex;
        flex-direction: column;
        text-align: center;
        align-items: center;
        justify-content: center;
        box-sizing: border-box;
        padding: 0px 15px 15px 15px;}
        
.type-item{display: flex;
           flex-direction: column;
           justify-content: center;
           align-items: center;
           text-align: center;
           margin: 0 10px;}

.type-container{display: flex;
                flex-direction: row;
                justify-content: center;
                font-size: 15px;
                color: white;
                margin-top: 10px;
                position: relative;
                }


.type-item-left:after{content: "";
                      width: 1px;
                      height: 85%;
                      background: white;
                      position: absolute;
                      left: 50%;
                      margin-left: 2px;
                      top: 2px;}

.budgetary-amount-text{color: white;
                       font-size: 16px;
                       }
.budgetary-amount-value{margin-top: 10px;
                        color: white;
                        font-size: 30px;
                        }

/*头部结束*/


/*每日统计记录item*/
.daily-record-container{width: 100%;}

.daily-item-container{width:100%;
                      height: 60px;
                      position: relative;
                      padding: 5px;
                      box-sizing: border-box;
                      font-size: 14px;
                      color: #7f7f7f;
                      transition: all 0.3s
                      }
.daily-item-container:hover{background:#eeeeee;
                            }
.daily-item-container:before{content: "";
                             width: 14px;
                             height: 14px;
                             border-radius: 100%;
                             background:#e8e8e8;
                             position: absolute;
                             left: 43px;
                             top: 18px;
                             }
.daily-item-container:after{content:"";
                            width: 1px;
                            height: 100%;
                            background: #e8e8e8;
                            position: absolute;
                            left: 50px;
                            top: 0px;
                            }



.daily-item-date-container{margin-left: 80px;
                           display: flex;
                           flex-direction: column;
                           float: left;
                           }

.daily-item-time{
                 margin-bottom:5px;}

.daily-item-money-container{float: right;
                            margin-right: 30px;
                            line-height: 50px;
                            color: #ff4747;
                            }
/*每日统计记录item结束*/