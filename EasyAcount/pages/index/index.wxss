/* pages/index/index.wxss */

/*头部*/
.header{width: 100%;
        background: #208ee1;
        display: flex;
        flex-direction: column;
        text-align: center;
        align-items: center;
        justify-content: center; 
        box-sizing: border-box;
        padding: 0px 15px 15px 15px;}
        
.type-item{display: flex;
           flex-direction: column;
           justify-content: center;
           align-items: center;
           text-align: center;
           margin: 0 10px;}

.type-container{display: flex;
                flex-direction: row;
                justify-content: center;
                font-size: 15px;
                color: white;
                margin-top: 10px;
                position: relative;
                }


.type-item-left:after{content: "";
                      width: 1px;
                      height: 85%;
                      background: white;
                      position: absolute;
                      left: 50%;
                      margin-left: 2px;
                      top: 2px;}

.budgetary-amount-text{color: white;
                       font-size: 16px;
                       }
.budgetary-amount-value{margin-top: 10px;
                        color: white;
                        font-size: 30px;
                        }

/*头部结束*/


/*每日统计记录总item*/
.daily-record-container{width: 100%;}

.daily-item-container,.daily-item-detial{width:100%;
                      height: 60px;
                      position: relative;
                      padding: 5px;
                      box-sizing: border-box;
                      font-size: 14px;
                      background: #f8f8f8;
                      color: #7f7f7f;
                      transition: all 0.3s
                      }
.daily-item-container:hover,.daily-item-detial:hover{background:#eeeeee;
                            }
.daily-item-container:before{content: "";
                             width: 14px;
                             height: 14px;
                             border-radius: 100%;
                             background:#dddddd;
                             position: absolute;
                             left: 43px;
                             top: 18px;
                             }
.daily-item-container:after,.daily-item-detial:after{content:"";
                            width: 1px;
                            height: 100%;
                            background: #dddddd;
                            position: absolute;
                            left: 50px;
                            top: 0px;
                            z-index: 0;
                            }



.left-container{margin-left: 80px;
                display: flex;
                flex-direction: column;
                float: left;
                }

.left-container>text{margin-bottom:2px;
                     margin-top: 2px;}

.right-container{float: right;
                 margin-right: 30px;
                 line-height: 50px;
                 color: #ff5353;
                            }
/*每日统计记录item结束*/


/*每日记录详情*/
.daily-item-detial{background: white;
                   }
.type-icon{width:32px;
           height: 32px;
           position: absolute;
           left: 34px;
           top: 14px;
           z-index: 1;}
.spend-type-text{font-weight: bold;
                 font-size: 15px;}
.spend-notes-text{font-size: 13px;}
.cost-text{font-size: 18px;}
/*每日记录详情结束*/
