<view class="set-page-container">
  <view class='user-pic-container'>
    <image src='{{userPic}}' class='user-pic' ></image>
    <text class='user-name'>{{nickName}}</text>
  </view>
  <view class='set-item'>
    <text>每月预算</text>
    <view>
      <input type='digit' value="1500" class='budget-input' bindchange='ChangeBudgetValue'></input>
      <image class='right-arrow-icon' src='/images/rightarrow.png'></image>
    </view>
  </view>
   <view class='set-item' bindtap='ChangeDisplayItemWay'>
    <text>明细显示方式</text>
    <view>
      <text>{{displayItemWay}}</text>
      <image class='right-arrow-icon' src='/images/rightarrow.png'></image>
    </view>
  </view>
  <view class='set-item'>
    <text>意见反馈</text>
    <view>
      <text></text>
    </view>
  </view>
  <view class='set-item'>
    <text>推荐给好友</text>
    <view>
      <text></text>
    </view>
  </view>
  <view class='set-item'>
    <text>捐助我</text>
    <view>
      <text></text>
    </view>
  </view>
  <view class='set-item' bindtap='NavigateToUpdateHistoryPage'>
    <text>更新记录</text>
    <view>
      <image class='right-arrow-icon' src='/images/rightarrow.png'></image>
    </view>
  </view>
  <view class='set-item set-item-last'>
    <text>版本号</text>
    <view>
      <text class='version'>1.00</text>
    </view>
  </view>
</view>