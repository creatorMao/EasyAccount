/* pages/set/set.wxss */
.set-page-container{background: rgba(255, 255, 255, 0.4);
                    width: 100%;
                    height: 100%;
                    position: fixed;
                    left: 0px;
                    top: 0px;
                    font-size: 15px;}
.set-item{height: 40px;
          background: white;
          position: relative;
          display: flex;
          padding: 0px 20px;
          justify-content: space-between}
.set-item text{line-height: 40px}
.set-item:after{content: "";
                width: 100%;
                height: 1px;
                background: #dddddd;
                position: absolute;
                bottom: 0px;
                left: 20px;}


.user-pic-container{
          width: 110px;
          margin: 0 auto;
          margin-top: 40px;
          margin-bottom: 40px;
          display: flex;
          flex-direction: column;
          align-items: center;}
.user-pic{width: 110px;
          height: 110px;
          border-radius:100%;}
.user-name{margin-top:10px;
           font-size: 17px;}